  file = {Rosier_Lawrence_1999_The January 1992 stratospheric sudden warming.pdf:/Users/BNL28/zotero-storage/storage/BGTR7MAR/Rosier_Lawrence_1999_The January 1992 stratospheric sudden warming.pdf:application/pdf;Snapshot:/Users/BNL28/zotero-storage/storage/KDGNERV4/abstract.html:text/html}
